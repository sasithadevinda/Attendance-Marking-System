<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.text.Font?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="199.0" prefWidth="466.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep8.sas.controller.ImportDBFormController">
    <children>
        <Label layoutX="14.0" layoutY="42.0" text="Restore previous database backup: ">
            <font>
                <Font name="Ubuntu" size="13.0" />
            </font>
        </Label>
        <Label layoutX="14.0" layoutY="14.0" text="Hey there! It seems like this is the first boot of Student Attedence System">
            <font>
                <Font name="Ubuntu" size="13.0" />
            </font>
        </Label>
        <RadioButton fx:id="rdoRestore" layoutX="14.0" layoutY="66.0" mnemonicParsing="false" text="Restore previous backup">
            <font>
                <Font name="Ubuntu" size="13.0" />
            </font>
            <toggleGroup>
                <ToggleGroup fx:id="abc" />
            </toggleGroup>
        </RadioButton>
        <TextField fx:id="txtBrowse" layoutX="33.0" layoutY="97.0" prefHeight="26.0" prefWidth="383.0" />
        <Button fx:id="btnBrowse" layoutX="418.0" layoutY="97.0" mnemonicParsing="false" onAction="#btnBrowse_OnAction" text="..." />
